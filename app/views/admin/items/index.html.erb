<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-2"><h4>商品一覧</h4></div>
  <div class="col-xs-6"></div>
  <a class="glyphicon glyphicon-plus ol-xs-1" href= "/admin/items/new"></a>
  <div class="col-xs-1"></div>
</div>
<br>
<div class="row">
  <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">ジャンル</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <th scope="row"><%= item.id %></th>
              <td><%= link_to item.name,"/admin/items/#{item.id}"%></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_active== true ? "販売中" : "販売停止中" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div class="col-xs-1"></div>
</div>