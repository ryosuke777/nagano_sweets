<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-2"><h4>会員一覧</h4></div>
  <div class="col-xs-9"></div>
  <div class="col-xs-1"></div>
</div>


<div class="row">
  <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <th scope="row"><%= customer.id %></th>
              <td><%= link_to "#{customer.last_name}" + "#{customer.first_name}" ,"/admin/end_users/#{customer.id}"%></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == true %>
                退会済
                <% else %>
                有効
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div class="col-xs-1"></div>
</div>
