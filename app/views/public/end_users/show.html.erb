<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-2"><h4>マイページ</h4></div>
  <div class="col-xs-9"></div>
</div>

<div class="row">
  <div class="col-xs-1"></div>
     <div class="col-xs-2">
     	<h4>登録情報</h4>
     </div>
     <div class="col-xs-2" style="display:inline-flex">

	   <%= button_to "編集する", edit_public_end_user_path,method: :get %>
	   <%= button_to "パスワードを変更する", edit_customer_password_path(current_customer.id),method: :get %>
	 </div>
     <div class="col-xs-1"></div>
</div>


<div class="row">
  <div class="col-xs-1"></div>
    <div class="col-xs-9">
	<table class="table table-noborder">
	  <tr>
	  	<th>氏名</th>
	  	<td><%= "#{@customer.last_name}" + "#{@customer.first_name}"%></td>
	  </tr>
	  <tr>
	  	<th>カナ</th>
	  	<td><%= "#{@customer.last_name_kana}" + "#{@customer.first_name_kana}" %></td>
	  </tr>
	  <tr>
	  	<th>郵便番号</th>
	  	<td><%= @customer.postal_code %></td>
	  </tr>
	  <tr>
	  	<th>住所</th>
	  	<td><%= @customer.address%></td>
	  </tr>
	  <tr>
	  	<th>電話番号</th>
	  	<td><%= @customer.telephone_number%></td>
	  </tr>
	  <tr>
	  	<th>メールアドレス</th>
	  	<td><%= @customer.email%></td>
	  </tr>
	</table>
</div>
  <div class="col-xs-1"></div>
</div>

<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-4 form-group">
    <label>配送先</label>
    <%= link_to "一覧を見る", public_addresses_path(@customer.id) %>
    <br>
	<label>注文履歴</label>
	<%= link_to "一覧を見る", public_orders_path %>
  </div>
</div>