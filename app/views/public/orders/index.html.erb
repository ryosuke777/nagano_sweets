<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-2"><h4>注文履歴一覧ページ</h4></div>
  <div class="col-xs-8"></div>
</div>
<br>


<div class="row">
  <div class = "field col-xs-1"></div>
  <div class = "field col-xs-10">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">注文日</th>
          <th scope="col">配送先</th>
          <th scope="col">注文商品</th>
          <th scope="col">支払金額</th>
          <th scope="col">ステータス</th>
          <th scope="col">注文詳細</th>
        </tr>
      </thead>

      <tbody>
      	<% @customer.orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td>
            	<p><%= order.postal_code %></p>
            	<p><%= order.address %></p>
            	<p><%= order.name %></p>
            </td>
            <td>
            	<% order.order_details.each do |order_detail| %>
            	  <p><%= order_detail.item.name %></p>
                <% end %>
            </td>
            <td><%= order.total_payment %>円</td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", public_order_path(order.id)%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>