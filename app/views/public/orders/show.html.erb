<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-2"><h4>注文履歴詳細</h4></div>
  <div class="col-xs-8"></div>
</div>
<br>
<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-6">
    <p>注文情報</p>
    <table class="table table-bordered">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </table>
  </div>

    <div class="col-xs-3">
    <p>請求情報</p>
    <table class="table table-bordered">
      <tr>
        <th>商品合計</th>
        <td><%= @sum %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.total_payment %></td>
      </tr>
    </table>
    </div>
</div>

<div class="row">
  <div class="col-xs-1"></div>
    <div class="col-xs-8">
      <p>注文内容</p>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価(税込)</th>
            <th scope="col">個数</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.item.price.to_i*1.10).floor %></td>
              <td><%= order_detail.amount %></td>
              <td><%= ((order_detail.item.price.to_i*1.10).floor)*order_detail.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>